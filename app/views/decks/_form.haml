%br
- if deck.list
  %pre= deck.list


- if deck.round_id == Round.next_round.id
  = simple_form_for(deck, html: {class: 'form-horizontal' }) do |f|
    = f.input :round_id, as: :hidden, :input_html => {value: Round.next_round.id}
    = f.input :list

    = f.button :submit, class: "btn-primary"
    = link_to "Cancel", :back, class: "btn btn-default"
